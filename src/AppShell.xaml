<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SCPSharp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SCPSharp"
    xmlns:views="clr-namespace:SCPSharp.Views"
    Title="SCPSharp"
    Shell.TabBarBackgroundColor="{StaticResource TabBarColor}"
    Shell.TabBarForegroundColor="{StaticResource TextColor}"
    Shell.TabBarTitleColor="{StaticResource TextColor}"
    Shell.TabBarUnselectedColor="{StaticResource TextColor}">
    <TabBar>
        <Tab Title="Saved sessions">
            <ShellContent ContentTemplate="{DataTemplate views:SessionsView}" Route="SessionsView" />
        </Tab>
        <Tab Title="File explorer">
            <ShellContent ContentTemplate="{DataTemplate views:FileExplorerView}" Route="FileExplorerView" />
        </Tab>
    </TabBar>
</Shell>
